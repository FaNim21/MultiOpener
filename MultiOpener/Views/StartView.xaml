<UserControl x:Class="MultiOpener.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
             xmlns:viewmodels="clr-namespace:MultiOpener.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:StartViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#383A3C">
    <Grid>
        <local:ButtonNormal x:Name="OpenButton"
                            Width="100"
                            Height="35"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="50 50 0 0"
                            ContentText="OPEN"
                            IsEnabled="{Binding OpenButtonEnabled}"
                            OnCommand="{Binding OpenCommand}"
                            FontSize="20" />
        <local:ButtonNormal x:Name="CloseButton"
                            Width="100"
                            Height="35"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="50 100 0 0"
                            ContentText="CLOSE"
                            OnCommand="{Binding CloseCommand}"
                            FontSize="20" />

        <Label Content="v0.2.3"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" />

        <Label Content="Made by FaNim"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom" />

        <TextBlock TextWrapping="WrapWithOverflow"
                   Margin="225,62,322,315">
    For now one added AutoHotkey script to settings will cause on close every AutoHotkey to shut down due to TheWall script resetting issues
        </TextBlock>
    </Grid>
</UserControl>
