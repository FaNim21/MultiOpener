<UserControl x:Class="MultiOpener.Views.Opened.OpenedResetTrackerProcessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:viewmodels="clr-namespace:MultiOpener.Entities.Opened"
             xmlns:buttons="clr-namespace:MultiOpener.Components.Buttons"
             d:DataContext="{d:DesignInstance Type=viewmodels:OpenedResetTrackerProcess}"
             mc:Ignorable="d"
             Width="550"
             Height="350"
             Background="#383A3C">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="12" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Label Content="RESET TRACKER"/>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Width="540"
                    Margin="5">
            <TextBlock Foreground="#a0e3e3"
                       Text=" -- Main -- " />
            <TextBlock>
        <Run Foreground="DarkGray"
                Text="Name: " />
        <Run Foreground="White"
                Text="{Binding Name, Mode=OneTime, Converter={StaticResource EmptyStringConverter}}" />
            </TextBlock>
            <TextBlock>
        <Run Foreground="DarkGray"
                Text="Title: " />
        <Run Foreground="White"
                Text="{Binding WindowTitle, Mode=OneWay, Converter={StaticResource EmptyStringConverter}}" />
            </TextBlock>
            <TextBlock>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding CopyTextToClipboardCommand}"
                                       CommandParameter="{Binding Text, ElementName=TextPath}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Run Foreground="DarkGray"
                Text="Path: " />
        <Run Foreground="White"
                x:Name="TextPath"
                Text="{Binding Path, Mode=OneWay}" />
            </TextBlock>
            <TextBlock>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding CopyTextToClipboardCommand}"
                                       CommandParameter="{Binding Text, ElementName=TextID}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Run Foreground="DarkGray"
                Text="ID: " />
        <Run Foreground="White"
                Name="TextID"
                Text="{Binding Pid, Mode=OneWay}" />
            </TextBlock>
            <TextBlock>
        <Run Foreground="DarkGray"
                Text="Hwnd: " />
        <Run Foreground="White"
                Text="{Binding Hwnd, Mode=OneWay}" />
            </TextBlock>

            <TextBlock Foreground="#a0e3e3"
                       Text=" -- StartInfo -- " />
            <TextBlock>
        <Run Foreground="DarkGray"
                Text="FileName: " />
        <Run Foreground="White"
                Text="{Binding ProcessStartInfo.FileName, Mode=OneWay, Converter={StaticResource EmptyStringConverter}}" />
            </TextBlock>
            <TextBlock>
        <Run Foreground="DarkGray"
                Text="WorkingDirectory: " />
        <Run Foreground="White"
                Text="{Binding ProcessStartInfo.WorkingDirectory, Mode=OneWay, Converter={StaticResource EmptyStringConverter}}" />
            </TextBlock>
            <TextBlock>
        <Run Foreground="DarkGray"
                Text="Arguments: " />
        <Run Foreground="White"
                Text="{Binding ProcessStartInfo.Arguments, Mode=OneWay, Converter={StaticResource EmptyStringConverter}}" />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
