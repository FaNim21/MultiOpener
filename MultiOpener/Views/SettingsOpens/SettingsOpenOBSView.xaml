<UserControl x:Class="MultiOpener.Views.SettingsOpens.SettingsOpenOBSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:MultiOpener.ViewModels.Settings"
             xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
             xmlns:converters="clr-namespace:MultiOpener.Converters"
             d:DataContext="{d:DesignInstance Type=settings:SettingsOpenOBSModelView}"
             mc:Ignorable="d"
             d:DesignHeight="370"
             d:DesignWidth="500"
             Background="#383A3C">
    <Grid>
        <WrapPanel Margin="50 0 0 0"
                   Orientation="Vertical">
            <!--GORA-->
            <WrapPanel>
                <Label Content="Application path:"
                       Foreground="White"
                       Width="350"
                       Height="31"
                       FontSize="16"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <Grid>
                    <TextBox x:Name="AppDirectoryPathField"
                             TextWrapping="NoWrap"
                             Width="350"
                             Height="20"
                             Text="{Binding ApplicationPathField}"
                             Background="#9E9E9E"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             IsReadOnly="True" />
                    <local:ButtonNormal x:Name="SetAppPath"
                                        Width="40"
                                        Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontSize="14"
                                        ContentText="SET"
                                        Margin="360 0 0 0"
                                        OnCommand="{Binding SettingsSetDirectoryPathCommand}" />
                </Grid>
            </WrapPanel>

            <!--MIDDLE-->
            <WrapPanel Orientation="Horizontal">
                <WrapPanel Orientation="Vertical"
                           HorizontalAlignment="Left"
                           Width="200">
                    <Label Content="Delays (1000 - 1 sec):"
                           Foreground="White"
                           Width="200"
                           Height="31"
                           FontSize="16"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" />

                    <WrapPanel Orientation="Horizontal"
                               Margin="0 0 0 5">
                        <TextBox x:Name="delayBeforeTimeField"
                                 TextWrapping="Wrap"
                                 Width="80"
                                 Height="20"
                                 Text="{Binding DelayBeforeTimeField}"
                                 PreviewTextInput="NumberValidationTextBox"
                                 Background="#9E9E9E"
                                 MaxLength="5" />
                        <Label Content="Before"
                               Foreground="White"
                               Height="18"
                               FontSize="16"
                               Padding="0"
                               Margin="5 0 0 3" />
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0 0 0 5">
                        <TextBox x:Name="delayAfterTimeField"
                                 TextWrapping="Wrap"
                                 Width="80"
                                 Height="20"
                                 Text="{Binding DelayAfterTimeField}"
                                 PreviewTextInput="NumberValidationTextBox"
                                 Background="#9E9E9E"
                                 MaxLength="5"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top" />
                        <Label Content="After"
                               Foreground="White"
                               Height="20"
                               FontSize="16"
                               Padding="0"
                               Margin="5 0 0 3" />
                    </WrapPanel>
                </WrapPanel>
                <WrapPanel Orientation="Vertical"
                           HorizontalAlignment="Left"
                           Width="200">
                    <Label Content="Selections:"
                           Foreground="White"
                           Height="31"
                           FontSize="16"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" />

                    <ToggleButton IsChecked="{Binding MinimizeOnOpen}"
                                  Height="20"
                                  Foreground="White"
                                  Content="Minimize on open"
                                  VerticalContentAlignment="Center" />

                    <ToggleButton IsChecked="{Binding ConnectWebSocket}"
                                  Height="20"
                                  Foreground="White"
                                  Content="Connect with OBS WebSocket"
                                  VerticalContentAlignment="Center" />
                </WrapPanel>
            </WrapPanel>

            <!--MIDDLE-->
            <WrapPanel Orientation="Horizontal">
                <Label Content="OBS WebSocket configuration:"
                       Foreground="White"
                       Width="350"
                       Height="31"
                       FontSize="16"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <WrapPanel Orientation="Vertical"
                           HorizontalAlignment="Left"
                           Width="200">
                    <WrapPanel Orientation="Horizontal"
                               Margin="0 0 0 5">
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Port}"
                                 PreviewTextInput="NumberValidationTextBox"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E"
                                 MaxLength="5" />
                        <Label Content="Port"
                               Foreground="White"
                               Height="18"
                               FontSize="16"
                               Padding="0"
                               Margin="5 0 0 3" />
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0 0 0 5">
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Password}"
                                 Background="#9E9E9E"
                                 MaxLength="5"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top" />
                        <Label Content="Password"
                               Foreground="White"
                               Height="20"
                               FontSize="16"
                               Padding="0"
                               Margin="5 0 0 3" />
                    </WrapPanel>
                </WrapPanel>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</UserControl>
