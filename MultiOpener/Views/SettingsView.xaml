<UserControl x:Class="MultiOpener.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#383A3C">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--LEWA-->
        <Grid Grid.Row="1"
              Grid.Column="0">

            <Label Content="Application path:"
                   Foreground="White"
                   Width="350"
                   Height="31"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0 20 0 0" />

            <TextBox x:Name="AppDirectoryPathField"
                     TextWrapping="Wrap"
                     Width="350"
                     Height="20"
                     Background="#9E9E9E"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0 50 0 0" />

            <CheckBox x:Name="delayCheckBox"
                      Foreground="White"
                      IsChecked="True"
                      Width="100"
                      Height="15"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Margin="0 90 252 0">Delay after</CheckBox>
            <TextBox x:Name="delayTimeField"
                     TextWrapping="Wrap"
                     Width="80"
                     Height="20"
                     Background="#9E9E9E"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0 110 270 0" />
            <Label Content="(1000 - 1 sec)"
                   Foreground="White"
                   Height="36"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0 102 90 0" />

            <local:ButtonNormal x:Name="UpdateCurrentOpenButton"
                                Width="125"
                                Height="25"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                FontSize="16"
                                Grid.Column="3"
                                Margin="0 0 0 20"
                                ContentText="Save Open"
                                Click="SaveCurrentOpenButtonClick" />
        </Grid>

        <Line X1="400"
              Y1="425"
              X2="400"
              Y2="0"
              Grid.Row="1"
              Grid.ColumnSpan="2"
              Stroke="#000D14"
              StrokeThickness="3" />

        <!--PRAWA-->
        <Grid Grid.Row="1"
              Grid.Column="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--LISTA SKONCZYC FUNKCJONALNOSC DRAG AND DROP I DEKOROWANIE-->
            <Grid Grid.Column="0">
                <ListView x:Name="itemList"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="#424242"
                          BorderThickness="0">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="MouseMove"
                                         Handler="TextBlockMouseMove" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="120"
                                  Height="20"
                                  Background="#313131"
                                  HorizontalAlignment="Center">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="{Binding Name}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--CONFIGURATOR-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          HorizontalAlignment="Center">
                        <Label Content="Open option name:"
                               Foreground="White"
                               Width="120"
                               Height="25"
                               FontSize="12"
                               VerticalAlignment="Top"
                               Margin="0 20 0 0" />
                        <TextBox Name="AddNameField"
                                 TextWrapping="Wrap"
                                 Text="Wall"
                                 Width="120"
                                 Height="20"
                                 Background="#9E9E9E"
                                 VerticalAlignment="Top"
                                 Margin="0 45 0 0" />
                        <local:ButtonNormal x:Name="AddItemTolistViewButton"
                                            Width="120"
                                            Height="25"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            FontSize="16"
                                            Margin="0 75 0 0"
                                            ContentText="Add"
                                            Click="AddNewOpenItem" />
                    </Grid>

                    <Grid Grid.Column="1">
                        <!--COMBO BOXA TRZEBA BEDZIE ODDZIELNIE ZMODYFIKOWAC WIZUALNIE-->
                        <Label Content="Type:"
                               Foreground="White"
                               Width="120"
                               Height="25"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0 20 0 0" />
                        <ComboBox x:Name="typeOptionComboBox"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Top"
                                  Width="120"
                                  Height="20"
                                  Background="#313131"
                                  Margin="0 45 0 0">
                            <ComboBoxItem IsSelected="True">Normal</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <local:ButtonNormal x:Name="UpdateButton"
                                        Width="125"
                                        Height="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="16"
                                        Grid.Column="3"
                                        Margin="0 0 0 20"
                                        ContentText="Save"
                                        Click="SaveButtonClick" />

                    <local:ButtonNormal x:Name="LoadButton"
                                        Width="125"
                                        Height="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="16"
                                        Grid.Column="3"
                                        Margin="0 0 0 60"
                                        ContentText="Load"
                                        Click="LoadButtonClick" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
