<UserControl x:Class="MultiOpener.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
             xmlns:viewmodels="clr-namespace:MultiOpener.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:OptionsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#383A3C">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label x:Name="versionLabel"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Margin="0 16" />
        <Label Content="Made by FaNim"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" />

        <TextBlock HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Grid.Column="1"
                   Margin="3">
                    <Hyperlink NavigateUri="https://github.com/FaNim21/MultiOpener/releases"
                               RequestNavigate="Hyperlink_RequestNavigate">
                        All releases here
                    </Hyperlink>
        </TextBlock>

        <!-- TIMINGS -->
        <Grid Grid.Column="0">
            <Label Content="Timings"
                   FontSize="24"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Height="42"/>

            <TextBox x:Name="delayBeforeTimeField"
                     TextWrapping="Wrap"
                     Text="{Binding TimeLookingForInstancesData}"
                     Width="80"
                     Height="20"
                     Background="#9E9E9E"
                     MaxLength="5"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0 90 270 0" />
            <Label Content="LookingForInstancesData"
                   Foreground="White"
                   Height="32"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0 84 0 0" />
        </Grid>

        <Line X1="400"
              Y1="450"
              X2="400"
              Y2="0"
              Grid.Row="1"
              Grid.ColumnSpan="2"
              Stroke="#000D14"
              StrokeThickness="3" />

        <!-- OTHER -->
        <Grid Grid.Column="1">
            <Label Content="Other"
                   FontSize="24"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Height="40" />
            
        </Grid>
    </Grid>
</UserControl>
