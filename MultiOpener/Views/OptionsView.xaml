<UserControl x:Class="MultiOpener.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
             xmlns:viewmodels="clr-namespace:MultiOpener.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:OptionsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#383A3C">
    <Grid>
        <Label x:Name="versionLabel"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0 32" />
        <Label Content="Made by FaNim"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom" 
               Margin="0 16"/>

        <TextBlock HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Grid.Column="1"
                   Margin="3">
                    <Hyperlink NavigateUri="https://github.com/FaNim21/MultiOpener/releases"
                               RequestNavigate="Hyperlink_RequestNavigate">
                        All releases here
                    </Hyperlink>
        </TextBlock>

        <local:ButtonNormal Width="120"
                            Height="30"
                            ContentText="Reset to default"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            FontSize="15"
                            OnCommand="{Binding ResetToDefaultCommand}"
                            Margin="0 10 10 0" />
        
        <!-- TIMINGS -->
        <Label Content="Timings (1000 = 1 sec)"
               FontSize="26"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Height="50" />
        <WrapPanel Orientation="Vertical"
                   Margin="50 50 0 0">
            <!--Main-->
            <Label Foreground="White"
                   FontSize="22"
                   Content="Main" />
            <Grid>
                <TextBox TextWrapping="Wrap"
                         Text="{Binding TimeLateRefresh}"
                         Width="80"
                         Height="20"
                         Background="#9E9E9E"
                         HorizontalAlignment="Left"
                         MaxLength="5" />
                <Label Content="Time for late refresh"
                       Foreground="White"
                       Height="32"
                       FontSize="16"
                       Margin="80 0 0 0" />
            </Grid>
            <Grid>
                <TextBox TextWrapping="Wrap"
                         Text="{Binding TimeoutOpen}"
                         Width="80"
                         Height="20"
                         Background="#9E9E9E"
                         HorizontalAlignment="Left"
                         MaxLength="5" />
                <Label Content="Opening timeout on every 'Open' in preset"
                       Foreground="White"
                       Height="32"
                       FontSize="16"
                       Margin="80 0 0 0" />
            </Grid>
            <Grid>
                <TextBox TextWrapping="Wrap"
                         Text="{Binding TimeoutSingleOpen}"
                         Width="80"
                         Height="20"
                         Background="#9E9E9E"
                         HorizontalAlignment="Left"
                         MaxLength="5" />
                <Label Content="Opening timeout on chosen opening"
                       Foreground="White"
                       Height="32"
                       FontSize="16"
                       Margin="80 0 0 0" />
            </Grid>

            <!--Instance-->
            <Label Foreground="White"
                   FontSize="22"
                   Content="Instance for MC" 
                   Margin="0 20 0 0"/>
            <Grid>
                <TextBox TextWrapping="Wrap"
                         Text="{Binding TimeoutLookingForInstancesData}"
                         Width="80"
                         Height="20"
                         Background="#9E9E9E"
                         HorizontalAlignment="Left"
                         MaxLength="5" />
                <Label Content="Looking for instances data timeout"
                       Foreground="White"
                       Height="32"
                       FontSize="16"
                       Margin="80 0 0 0" />
            </Grid>
            <Grid>
                <TextBox TextWrapping="Wrap"
                         Text="{Binding TimeoutInstanceFinalizingData}"
                         Width="80"
                         Height="20"
                         Background="#9E9E9E"
                         HorizontalAlignment="Left"
                         MaxLength="5" />
                <Label Content="instance finalizing data timeout"
                       Foreground="White"
                       Height="32"
                       FontSize="16"
                       Margin="80 0 0 0" />
            </Grid>
            <Grid>
                <TextBox TextWrapping="Wrap"
                         Text="{Binding TimeoutLookingForSingleInstanceData}"
                         Width="80"
                         Height="20"
                         Background="#9E9E9E"
                         HorizontalAlignment="Left"
                         MaxLength="5" />
                <Label Content="Single opening instance timeout"
                       Foreground="White"
                       Height="32"
                       FontSize="16"
                       Margin="80 0 0 0" />
            </Grid>

        </WrapPanel>
    </Grid>
</UserControl>
