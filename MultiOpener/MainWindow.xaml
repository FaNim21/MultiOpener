<Window x:Class="MultiOpener.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
        xmlns:viewmodels="clr-namespace:MultiOpener.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        x:Name="window"
        Closed="OnClosed"
        Width="800"
        Height="450"
        WindowStyle="None"
        Title="MultiOpener"
        ResizeMode="NoResize"
        Background="#383A3C">
    <Window.Resources>
        <ContextMenu x:Key="contextmenu">
            <MenuItem Header="close"
                      Click="ExitButtonClick"
                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
            <MenuItem Header="close2"
                      Click="ExitButtonClick"
                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--HEADER-->
        <Grid Background="#000D14"
              Grid.ColumnSpan="3"
              MouseDown="HeaderMouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <local:ButtonTaskbar x:Name="MinimizeButtons"
                                 Width="30"
                                 Height="25"
                                 FontSize="20"
                                 HorizontalAlignment="Right"
                                 Grid.Column="3"
                                 Margin="0 0 30 0"
                                 ContentText="-"
                                 Click="MinimizeButtonsClick" />

            <local:ButtonTaskbar x:Name="ExitButton"
                                 Width="30"
                                 Height="25"
                                 FontSize="20"
                                 HorizontalAlignment="Right"
                                 Grid.Column="3"
                                 ContentText="X"
                                 Click="ExitButtonClick" />

            <local:ButtonTaskbarChoose x:Name="StartButton"
                                       Width="80"
                                       Height="20"
                                       FontSize="12"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       Margin="12 5 0 0"
                                       ContentText="Start"
                                       ChangeCommand="{Binding UpdateViewCommand}"
                                       CommandParameter="Start"
                                       ContextMenu="{StaticResource contextmenu}" />

            <local:ButtonTaskbarChoose x:Name="SettingsButton"
                                       Width="80"
                                       Height="20"
                                       FontSize="12"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       Margin="107,5,5,0"
                                       ContentText="Presets"
                                       ChangeCommand="{Binding UpdateViewCommand}"
                                       CommandParameter="Settings" />

            <local:ButtonTaskbarChoose x:Name="InformationsButton"
                                       Width="80"
                                       Height="20"
                                       FontSize="12"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       Margin="202,5,5,0"
                                       ContentText="Information"
                                       ChangeCommand="{Binding UpdateViewCommand}"
                                       CommandParameter="Informations" />

            <local:ButtonTaskbarChoose x:Name="OptionsButton"
                                       Width="80"
                                       Height="20"
                                       FontSize="12"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       Margin="297,5,5,0"
                                       ContentText="Options"
                                       Visibility="Hidden"
                                       ChangeCommand="{Binding UpdateViewCommand}"
                                       CommandParameter="Informations" />

            <Label Content="MultiOpener"
                   FontWeight="Bold"
                   Grid.Column="3"
                   HorizontalAlignment="Left"
                   FontSize="14"
                   Margin="150 -2 0 0"
                   Foreground="LightCyan" />
            <Label x:Name="labelVersion"
                   FontWeight="Bold"
                   Grid.Column="3"
                   FontSize="10"
                   HorizontalAlignment="Left"
                   Margin="240 2 0 0"
                   Foreground="LightCyan" />
        </Grid>

        <!--BODY-->
        <ContentControl Grid.Row="1"
                        Content="{Binding SelectedViewModel}" />
    </Grid>
</Window>
