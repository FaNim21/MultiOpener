<Window x:Class="MultiOpener.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiOpener.Components.Buttons"
        xmlns:viewmodels="clr-namespace:MultiOpener.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="800"
        Height="450"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#383A3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--HEADER-->
        <Grid Background="#000D14"
              Grid.ColumnSpan="3"
              MouseDown="HeaderMouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <local:ButtonTaskbar x:Name="MinimizeButtons"
                                 Width="30"
                                 Height="25"
                                 FontSize="20"
                                 HorizontalAlignment="Right"
                                 Grid.Column="3"
                                 Margin="0 0 30 0"
                                 ContentText="-"
                                 Click="MinimizeButtonsClick" />

            <local:ButtonTaskbar x:Name="ExitButton"
                                 Width="30"
                                 Height="25"
                                 FontSize="20"
                                 HorizontalAlignment="Right"
                                 Grid.Column="3"
                                 ContentText="X"
                                 Click="ExitButtonClick" />

            <local:ButtonTaskbarChoose x:Name="StartButton"
                                       Width="80"
                                       Height="20"
                                       FontSize="12"
                                       Grid.Column="0"
                                       Margin="5,5,100,0"
                                       ContentText="Start"
                                       ChangeCommand="{Binding UpdateViewCommand}"
                                       CommandParameter="Start" />

            <local:ButtonTaskbarChoose x:Name="SettingsButton"
                                       Width="80"
                                       Height="20"
                                       FontSize="12"
                                       Grid.Column="0"
                                       Margin="100,5,5,0"
                                       ContentText="Settings"
                                       ChangeCommand="{Binding UpdateViewCommand}"
                                       CommandParameter="Settings" />
        </Grid>

        <ContentControl Grid.Row="1"
                        Content="{Binding SelectedViewModel}" />
    </Grid>
</Window>
